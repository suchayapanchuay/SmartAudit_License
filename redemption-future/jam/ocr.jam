obj ocr.o : $(REDEMPTION_SRC_PATH)/capture/ocr/locale/latin_to_cyrillic.cpp ;

alias ocr : ocr.o ppocr ;

## ppocr {

rule create_ppocr_rule ( srcs * )
{
    local targets ;
    local objs ;
    for f in $(srcs)
    {
        local path = $(f:P) ;
        local target = ppocr_$(path:B)_$(f:B).o ;
        obj $(target) : $(f) ;
        alias $(f).o : $(target) ;
        targets += $(target) ;
        objs += $(f).o ;
    }

    alias ppocr : $(targets) ;
    explicit ocr.o ocr ppocr $(targets) $(objs) ;
}

